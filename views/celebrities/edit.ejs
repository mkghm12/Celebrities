<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Edit <%=celebrity.name%> info</h1>
    <div style="width: 30%;margin:0 auto">
        <form action="/celebrity/<%=celebrity._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="Name">Name</label>
                <input class="form-control" type="text" placeholder="Name" name="celebrity[name]">
            </div>
            <div class="form-group">
                <label for="Image">image</label>
                <input class="form-control" type="text" placeholder="Image url" name="celebrity[image]">
            </div>
            <div class="form-group">
                <label for="About">About</label>
                <input class="form-control" type="text" placeholder="Type here" name="celebrity[about]">
            </div>
            <button class="btn btn-lg btn-block btn-primary" type="submit">submit</button>
        </form>
        <a class="text-center" href="/celebrity">go back</a>
    </div>

</div>


<% include ../partials/footer%>