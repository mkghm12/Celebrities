<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Celeb</p>
            <div class="list-group">
                <li class="list-group-item active">list Info 1</li>
                <li class="list-group-item">list Info 2</li>
                <li class="list-group-item">list Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= celebrity.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">copyright@manish</h4>
                    <h4><a href="/celebrity/<%= celebrity._id%>/comments/new"><%= celebrity.name%></a></h4>
                    <p><%= celebrity.about %></p>
                    <p><em>Submitted By <%= celebrity.author.username%></em></p>
                    <a class="btn btn-warning" href="/celebrity/<%=celebrity._id%>/edit">Edit</a>
                    <form id="delete-form" action="/celebrity/<%=celebrity._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/celebrity/<%= celebrity._id%>/comments/new">Add New comment</a>
                </div>
                <hr>
                    <% celebrity.comments.forEach(function (comment) { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%=comment.author.username%></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%=comment.text%>
                        </p>
                    </div>
                </div>

                    <% }); %>
            </div>
        </div>
    </div>
</div>




<% include ../partials/footer %>
